// Ensure to open root folder as Raumschiff
// Ensure terminal is set to same path

{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-g",
                "-std=c++17",
                "-I${workspaceFolder}/Dependencies/Include",
                "-L${workspaceFolder}/Dependencies/Library",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/glad.c",
                "${workspaceFolder}/Dependencies/tinyobjloader/tiny_obj_loader.cc",
                "-lglfw3",
                "-lgdi32",
                "-luser32",
                "-o",
                "${workspaceFolder}/Raumschiff.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}" 
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "C:/msys64/ucrt64/bin/g++.exe"
        }
    ]
}